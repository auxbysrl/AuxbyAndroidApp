<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/space_12dp"
    app:cardElevation="@dimen/space_6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_24dp"
        android:paddingBottom="@dimen/space_24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/messageIcon"
                android:layout_width="@dimen/space_24dp"
                android:layout_height="@dimen/space_24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/space_30dp"
                android:src="@drawable/ic_info_red" />

            <TextView
                android:id="@+id/messageInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextMontserratSemiBold17sp"
                android:layout_marginStart="@dimen/space_16dp"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_17sp"
                tools:text="@string/no_internet_connection" />
        </LinearLayout>

        <TextView
            android:id="@+id/messageSubtitleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_70dp"
            style="@style/TextMontserratMedium14sp"
            android:includeFontPadding="false"
            android:paddingEnd="@dimen/space_16dp"
            tools:text="@string/check_your_connection_and_try_again" />
    </LinearLayout>
</androidx.cardview.widget.CardView>