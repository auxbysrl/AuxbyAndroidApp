<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    android:elevation="@dimen/space_0dp"
    app:cardCornerRadius="@dimen/space_0dp"
    app:cardElevation="@dimen/space_0dp"
    app:layout_constraintTop_toTopOf="parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rounded_bottom_sheet">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llStateBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/space_8dp"
            tools:background="@drawable/bg_finished_state_header">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivOfferStateIcon"
                android:layout_width="@dimen/space_22dp"
                android:layout_height="@dimen/space_22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/space_8dp"
                tools:src="@drawable/ic_finish" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOfferState"
                style="@style/TextMontserratSemiBold14spWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="@string/finished" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>