<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white"
        app:shimmer_auto_start="false">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/space_16dp"
            android:paddingBottom="@dimen/space_40dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/space_120dp"
                    android:layout_height="@dimen/space_22dp"
                    android:layout_weight="1"
                    android:background="@color/gray_dddddd" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/space_120dp"
                    android:layout_height="@dimen/space_22dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="@dimen/space_160dp"
                    android:layout_height="@dimen/space_22dp"
                    android:layout_weight="1"
                    android:background="@color/gray_dddddd" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_14dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/space_12dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_16dp">

                        <View
                            android:layout_width="@dimen/space_35dp"
                            android:layout_height="@dimen/space_35dp"
                            android:background="@drawable/circle_dot_gray"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_19dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="@dimen/space_90dp"
                                android:layout_height="@dimen/space_22dp"
                                android:background="@color/gray_dddddd" />

                            <View
                                android:layout_width="@dimen/space_60dp"
                                android:layout_height="@dimen/space_22dp"
                                android:layout_marginTop="@dimen/space_6dp"
                                android:background="@color/gray_dddddd" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/space_12dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_16dp">

                        <View
                            android:layout_width="@dimen/space_35dp"
                            android:layout_height="@dimen/space_35dp"
                            android:background="@drawable/circle_dot_gray"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_19dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="@dimen/space_90dp"
                                android:layout_height="@dimen/space_22dp"
                                android:background="@color/gray_dddddd" />

                            <View
                                android:layout_width="@dimen/space_60dp"
                                android:layout_height="@dimen/space_22dp"
                                android:layout_marginTop="@dimen/space_6dp"
                                android:background="@color/gray_dddddd" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="@dimen/space_100dp"
                android:layout_height="@dimen/space_22dp"
                android:layout_marginTop="@dimen/space_12dp"
                android:background="@color/gray_dddddd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_280dp"
                android:layout_marginTop="@dimen/space_6dp"
                android:layout_marginBottom="@dimen/space_16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/space_8dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/space_16dp">

                    <View
                        android:layout_width="@dimen/space_160dp"
                        android:layout_height="@dimen/space_28dp"
                        android:background="@color/gray_dddddd"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_100dp"
                        android:layout_gravity="bottom"
                        android:background="@android:color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_100dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/space_16dp"
                        android:background="@color/gray_dddddd" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_280dp"
                android:layout_marginTop="@dimen/space_6dp"
                android:layout_marginBottom="@dimen/space_16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/space_8dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/space_16dp">

                    <View
                        android:layout_width="@dimen/space_160dp"
                        android:layout_height="@dimen/space_28dp"
                        android:background="@color/gray_dddddd"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_100dp"
                        android:layout_gravity="bottom"
                        android:background="@android:color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_100dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/space_16dp"
                        android:background="@color/gray_dddddd" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.facebook.shimmer.ShimmerFrameLayout>
</layout>