<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Auxby" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.AuxbyBundle" parent="Theme.Auxby">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.AuxbyOffer" parent="Theme.Auxby">
        <item name="android:statusBarColor">@android:color/transparent</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextInputLayout theme -->
    <style name="TextInputLayoutOutlinedTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopEnd">@dimen/space_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_8dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_blue</item>
        <item name="boxStrokeWidth">@dimen/space_1dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- TextInputEditText theme -->
    <style name="TextInputEditTextTheme" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorHint">@color/light_text</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- Google Button Theme -->
    <style name="GoogleButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/space_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:paddingTop">@dimen/space_14dp</item>
        <item name="android:paddingBottom">@dimen/space_14dp</item>
        <item name="android:background">@drawable/border_primary_8dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:strokeWidth">1</item>
        <item name="android:strokeColor">@color/colorPrimary</item>
        <item name="icon">@drawable/ic_google</item>
        <item name="iconTint">@null</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Alerter -->
    <style name="AlertErrorTitleAppearance">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertErrorSubTitleAppearance">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertErrorButtonAppearance" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Warning -->
    <style name="WarningTitleAppearance">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WarningSubTitleAppearance">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WarningButtonAppearance" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_8dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_blue</item>
        <item name="boxStrokeErrorColor">@color/text_input_box_stroke_red</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_8dp</item>
        <item name="boxStrokeWidth">@dimen/space_1dp</item>
        <item name="hintEnabled">false</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Widget.App.ExposedDropdownMenu.White" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_white</item>
        <item name="boxStrokeErrorColor">@color/text_input_box_stroke_red</item>
        <item name="boxStrokeWidth">@dimen/space_1dp</item>
        <item name="backgroundColor">@color/white</item>
    </style>

</resources>